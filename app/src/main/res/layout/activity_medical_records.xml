<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.patient.MedicalRecords">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:background="@color/mainColor"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="7dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/back_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ sơ bệnh án"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="#F1F1F1"
        android:padding="12dp"
        android:layout_below="@id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/block_top"
            android:background="@drawable/custom_button_detail_doctor"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/block_title"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_Color"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18dp"
                    android:text="Thông tin hồ sơ"/>
            </RelativeLayout>
            <View
                android:id="@+id/line"
                android:layout_below="@id/block_title"
                android:layout_width="match_parent"
                android:background="#DBE2FA"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/block_detail_user"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_below="@id/line"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/block_fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/block_title_fullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/text_Color"
                        android:text="Họ và tên: "/>
                    <TextView
                        android:id="@+id/fullName_user"
                        android:layout_toEndOf="@id/block_title_fullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_Color"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="16sp"
                        android:text="Trần Đình Tính"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/block_birth"
                    android:layout_below="@id/block_fullName"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/block_title_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/text_Color"
                        android:text="Ngày sinh: "/>
                    <TextView
                        android:id="@+id/birth_user"
                        android:layout_toEndOf="@id/block_title_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_Color"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="16sp"
                        android:text="08/03/1992"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/block_gender"
                    android:layout_below="@id/block_birth"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/block_title_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/text_Color"
                        android:text="Giới tính: "/>
                    <TextView
                        android:id="@+id/gender_user"
                        android:layout_toEndOf="@id/block_title_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_Color"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="16sp"
                        android:text="Nam"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/block_phone"
                    android:layout_below="@id/block_gender"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/block_title_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/text_Color"
                        android:text="Điện thoại: "/>
                    <TextView
                        android:id="@+id/phone_user"
                        android:layout_toEndOf="@id/block_title_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_Color"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="16sp"
                        android:text="098789765"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block_appointment_result"
            android:layout_below="@id/block_top"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/custom_button_detail_doctor"
            android:backgroundTint="@color/white"
            android:layout_marginTop="8dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#606060"
                android:text="Kết quả khám"/>
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block_one"
            android:layout_below="@id/block_appointment_result"
            android:background="@drawable/custom_button_detail_doctor"
            android:backgroundTint="@color/white"
            android:layout_marginTop="8dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#606060"
                android:text="Tiền sử bệnh bản thân"/>
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block_two"
            android:layout_below="@id/block_one"
            android:background="@drawable/custom_button_detail_doctor"
            android:backgroundTint="@color/white"
            android:layout_marginTop="8dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#606060"
                android:text="Tiền sử bệnh gia đình"/>
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block_three"
            android:layout_below="@id/block_two"
            android:background="@drawable/custom_button_detail_doctor"
            android:backgroundTint="@color/white"
            android:layout_marginTop="8dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#606060"
                android:text="Tiền sử dị ứng"/>
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_right"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>