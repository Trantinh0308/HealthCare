<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/time"
        android:text="06:10"
        android:textSize="15sp"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <RelativeLayout
        android:id="@+id/block_body"
        android:layout_below="@id/time"
        android:layout_marginTop="13dp"
        android:background="@drawable/custom_schedule_skip"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/drug_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/block_main"
            android:layout_toEndOf="@id/drug_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/drug_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracetamol"
                android:textSize="16sp"
                android:textColor="@color/text_Color"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/note"
                android:layout_below="@id/drug_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="uong sau khi an"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/icon_warning"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="#FF8F00"
                android:background="@drawable/warning"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>