<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EBEEF8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.patient.Menu">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/top_layout_title"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:background="@color/mainColor"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khác"
                android:fontFamily="sans-serif-medium"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/icon_support" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/circle"
            android:layout_marginTop="56dp"
            android:layout_width="match_parent"
            android:background="@drawable/custom_top_layout_home"
            android:layout_height="80dp" />

        <RelativeLayout
            android:id="@+id/form_infor_user"
            android:layout_below="@id/top_layout_title"
            android:background="@color/mainColor"
            android:layout_width="wrap_content"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/top_infor"
                android:layout_marginTop="5dp"
                android:paddingStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/image_user"
                    android:layout_width="57dp"
                    android:layout_height="57dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_account"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:padding="2dp"
                        android:src="@drawable/profile" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/top_infor_rigth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/image_user">

                    <TextView
                        android:id="@+id/fullName_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/gender_birth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fullName_user"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        //

        <RelativeLayout
            android:layout_marginTop="95dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/block_one"
                app:cardCornerRadius="15dp"
                app:cardElevation="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/g1"
                        android:layout_width="match_parent"
                        android:layout_height="1.2dp"
                        android:layout_centerVertical="true"
                        android:background="#ECEFFD" />

                    <RelativeLayout
                        android:id="@+id/btn_profile"
                        android:layout_width="match_parent"
                        android:layout_above="@id/g1"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:background="@drawable/custom_top_form_menu_orther">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_folder" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hồ sơ đã lưu"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="30dp"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:textColor="#252F35" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_right"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_menu2"
                        android:layout_below="@id/g1"
                        android:layout_width="match_parent"
                        android:clickable="true"
                        android:background="@drawable/custom_bottom_form_menu_orther"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon_menu2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_alarm_2" />

                        <TextView
                            android:id="@+id/title_menu2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhắc lịch"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="30dp"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:textColor="#252F35" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_right"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            //

            <androidx.cardview.widget.CardView
                android:id="@+id/block_two"
                app:cardCornerRadius="15dp"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/block_one"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/btn_contact"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:background="@drawable/custom_top_form_menu_orther">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_mail" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liên hệ"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="30dp"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:textColor="#252F35" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_right"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/g2"
                        android:layout_below="@id/btn_contact"
                        android:layout_width="match_parent"
                        android:layout_height="1.2dp"
                        android:layout_centerVertical="true"
                        android:background="#ECEFFD" />

                    <RelativeLayout
                        android:id="@+id/btn_menu4"
                        android:layout_below="@id/g2"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/icon_menu4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_setting" />

                        <TextView
                            android:id="@+id/title_menu4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cài đặt"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="30dp"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:textColor="#252F35" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_right"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/g3"
                        android:layout_below="@id/btn_menu4"
                        android:layout_width="match_parent"
                        android:layout_height="1.2dp"
                        android:layout_centerVertical="true"
                        android:background="#ECEFFD" />

                    <RelativeLayout
                        android:id="@+id/btn_rules"
                        android:layout_below="@id/g3"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_contract" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Điều khoản và điều kiện"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="30dp"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:textColor="#252F35" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_right"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/g4"
                        android:layout_below="@id/btn_rules"
                        android:layout_width="match_parent"
                        android:layout_height="1.2dp"
                        android:layout_centerVertical="true"
                        android:background="#ECEFFD" />

                    <RelativeLayout
                        android:id="@+id/btn_questions"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/g4"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_help" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Câu hỏi thường gặp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="30dp"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:textColor="#252F35" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_right"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/g5"
                        android:layout_below="@id/btn_questions"
                        android:layout_width="match_parent"
                        android:layout_height="1.2dp"
                        android:layout_centerVertical="true"
                        android:background="#ECEFFD" />

                    <RelativeLayout
                        android:id="@+id/btn_instruct"
                        android:layout_below="@id/g5"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:backgroundTint="#717171"
                            android:background="@drawable/icon_menu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hướng dẫn sử dụng"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="30dp"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:textColor="#252F35" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_right"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/g6"
                        android:layout_below="@id/btn_instruct"
                        android:layout_width="match_parent"
                        android:layout_height="1.2dp"
                        android:layout_centerVertical="true"
                        android:background="#ECEFFD" />

                    <RelativeLayout
                        android:id="@+id/btn_evaluate"
                        android:layout_below="@id/g6"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_star" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đánh giá ứng dụng"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="30dp"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:textColor="#252F35" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_right"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/g7"
                        android:layout_below="@id/btn_evaluate"
                        android:layout_width="match_parent"
                        android:layout_height="1.2dp"
                        android:layout_centerVertical="true"
                        android:background="#ECEFFD" />

                    <RelativeLayout
                        android:id="@+id/btn_news"
                        android:layout_below="@id/g7"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_infor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giới thiệu"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="30dp"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:textColor="#252F35" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_right"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/g8"
                        android:layout_below="@id/btn_news"
                        android:layout_width="match_parent"
                        android:layout_height="1.2dp"
                        android:layout_centerVertical="true"
                        android:background="#ECEFFD" />

                    <RelativeLayout
                        android:id="@+id/btn_introduce"
                        android:layout_below="@id/g8"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:background="@drawable/custom_bottom_form_menu_orther">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:backgroundTint="#717171"
                            android:background="@drawable/stethoscope" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thông tin y tế"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="30dp"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:textColor="#252F35" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_right"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            //

            <RelativeLayout
                android:layout_below="@id/block_two"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_logout"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_logout" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đăng xuất"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="30dp"
                            android:textAllCaps="false"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:textColor="#252F35" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_right"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>