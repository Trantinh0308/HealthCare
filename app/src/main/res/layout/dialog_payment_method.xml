<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/custom_top_form_menu_orther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Chọn phương thức thanh toán"
                android:textSize="19sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_Color"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/icon_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/icon_close" />
        </RelativeLayout>
        <View
            android:id="@+id/line_top"
            android:layout_below="@id/top_layout"
            android:layout_width="match_parent"
            android:background="#E0E6FA"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/line_top"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/btn_zalopay"
                android:clickable="true"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_zaloPay"
                    android:background="@drawable/zalopay"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <RelativeLayout
                    android:layout_toEndOf="@id/icon_zaloPay"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán qua ZaloPay"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/text_Color"/>
                    <TextView
                        android:id="@+id/text_top"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán bằng quét mã QR ngân hàng"/>
                    <TextView
                        android:id="@+id/text_below"
                        android:layout_below="@id/text_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hoặc ứng dụng Zalo/ZaloPay"/>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/line_two"
                android:layout_below="@id/btn_zalopay"
                android:layout_width="match_parent"
                android:background="#E0E6FA"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/btn_momoPay"
                android:layout_below="@id/line_two"
                android:clickable="true"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_momoPay"
                    android:background="@drawable/momo"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <RelativeLayout
                    android:layout_toEndOf="@id/icon_momoPay"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_title_momo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán qua ví MoMo"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/text_Color"/>
                    <TextView
                        android:id="@+id/text_top_momo"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/text_title_momo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sử dụng app Momo quét mã vạch để thanh"/>
                    <TextView
                        android:id="@+id/text_below_momo"
                        android:layout_below="@id/text_top_momo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="toán"/>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/line_three"
                android:layout_below="@id/btn_momoPay"
                android:layout_width="match_parent"
                android:background="#E0E6FA"
                android:layout_height="1dp"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>