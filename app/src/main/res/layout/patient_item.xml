<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:background="#E1F8E2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp">

        <RelativeLayout
            android:id="@+id/block_name"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/person"
                android:backgroundTint="@color/colorCircleSelected"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/fullName_user"
                android:layout_toEndOf="@id/icon_user"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/text_Color"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/calendar"
            android:layout_marginTop="7dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_below="@id/block_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_calendar"
                android:layout_width="23dp"
                android:layout_height="22dp"
                android:backgroundTint="@color/mainColor"
                android:background="@drawable/icon_alarm" />

            <TextView
                android:id="@+id/calendar_appointment"
                android:layout_toEndOf="@id/image_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="@color/text_Color"
                android:textSize="16sp"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_below="@id/calendar"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:background="#E8EDFA"
            android:layout_height="0.9dp"/>
    </RelativeLayout>
</RelativeLayout>