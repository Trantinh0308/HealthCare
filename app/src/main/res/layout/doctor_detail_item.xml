<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/doctor_detail"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/block_image"
            android:layout_centerHorizontal="true"
            android:layout_width="90dp"
            android:layout_height="90dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:id="@+id/image" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/camera"
                android:layout_marginTop="54dp"
                android:layout_marginLeft="57dp"
                android:id="@+id/icon_camera" />
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_below="@id/block_image"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15.5sp"
            android:textColor="@color/text_Color"
            android:text="BS HỒ MẠNH ĐẠT"/>
        <RelativeLayout
            android:id="@+id/block_appointment"
            android:layout_below="@id/name"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:text="Lượt khám: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/appointment"
                android:layout_toEndOf="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/location_work"
            android:layout_below="@id/block_appointment"
            android:text="Benh vien Bach Mai"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/specialist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_work"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button_detail_doctor"
            android:backgroundTint="#E9ECFB"
            android:padding="2dp">

            <TextView
                android:id="@+id/name_specialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Khoa Ho Hap"
                android:textColor="#3A49AE"
                android:textSize="14.5sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block_select"
            android:clickable="true"
            android:layout_below="@id/specialist"
            android:background="@drawable/custom_button_detail_doctor"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="15.5sp"
                android:fontFamily="sans-serif-medium"
                android:text="Tư vấn trực tuyến"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
