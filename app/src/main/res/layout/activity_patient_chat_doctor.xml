<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.patient.PatientChatDoctor">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:background="@color/mainColor"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="7dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/back_btn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng khám"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/home"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:background="@drawable/house"
            android:backgroundTint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/inforDoctor"
        android:layout_below="@id/bg"
        app:cardElevation="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_chat"
                android:layout_width="60dp"
                android:padding="5dp"
                android:src="@drawable/doctor3"
                android:layout_height="60dp"/>
            <RelativeLayout
                android:layout_toEndOf="@id/image_chat"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fullName_Chat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bác sĩ"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inforDoctor"
        android:layout_above="@id/bottom_layout"
        android:id="@+id/chat_recycler_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:id="@+id/bottom_layout">
        <EditText
            android:id="@+id/chat_message_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@id/message_send"
            android:backgroundTint="#ECEBEB"
            android:background="@drawable/custom_edittext_chat"
            android:elevation="4dp"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/message_send"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@drawable/send"
            android:padding="8dp"
            tools:ignore="UseAppTint" />
    </RelativeLayout>
</RelativeLayout>