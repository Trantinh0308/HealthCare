<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.patient.DoctorDetail">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainColor"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="7dp"
            android:id="@+id/toolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin bác sĩ"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/white"
                android:layout_centerVertical="true"
                android:id="@+id/back_btn" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/top_layout"
        android:layout_above="@+id/block_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/block_main"
            android:paddingBottom="12dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/block1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:padding="10dp"
                    android:id="@+id/block1_col1" />

                <RelativeLayout
                    android:id="@+id/block1_col2"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/block1_col1">

                    <TextView
                        android:id="@+id/fullName_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Xuân Diện"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-medium" />

                    <RelativeLayout
                        android:id="@+id/block1_col2_row2"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/fullName_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giới tính: "
                            android:textSize="16sp"
                            android:textColor="@color/text_Color" />

                        <TextView
                            android:id="@+id/gender"
                            android:layout_toEndOf="@id/text_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nam"
                            android:textSize="16sp"
                            android:textColor="@color/text_Color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/block1_col2_row3"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/block1_col2_row2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_degree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Học vị: "
                            android:textSize="16sp"
                            android:textColor="@color/text_Color" />

                        <TextView
                            android:id="@+id/degree"
                            android:layout_toEndOf="@id/text_degree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiến sĩ,bác sĩ"
                            android:textSize="16sp"
                            android:textColor="@color/text_Color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/block1_col2_row4"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/block1_col2_row3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_specialist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chuyên khoa: "
                            android:textSize="16sp"
                            android:textColor="@color/text_Color" />

                        <TextView
                            android:id="@+id/specialist"
                            android:layout_toEndOf="@id/text_specialist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hô hấp"
                            android:textSize="16sp"
                            android:textColor="@color/text_Color" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/block1_col2_row5"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/block1_col2_row4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giá khám: "
                            android:textSize="16sp"
                            android:textColor="@color/text_Color" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_toEndOf="@id/text_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120.000 đ"
                            android:textSize="16sp"
                            android:textColor="@color/text_Color" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/line_horizontal_one"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBD3ED"
                android:layout_below="@id/block1" />

            <RelativeLayout
                android:id="@+id/block2"
                android:layout_marginTop="10dp"
                android:layout_below="@id/line_horizontal_one"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <View
                    android:id="@+id/line_vertical"
                    android:layout_centerHorizontal="true"
                    android:background="@color/light_gray"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/line_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lượt hẹn khám"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:textColor="@color/text_Color" />

                    <TextView
                        android:id="@+id/number_appointment"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="27dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/text_Color"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/line_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kinh nghiệm"
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:textColor="@color/text_Color" />

                    <TextView
                        android:id="@+id/experience"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="27dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/text_Color"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/block3"
                android:layout_below="@+id/block2"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_achievement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quá trình học tập"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_Color" />

                <TextView
                    android:id="@+id/achievement"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/text_achievement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:maxLines="7"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@color/text_Color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/block4"
                android:layout_below="@+id/block3"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quá trình công tác"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_Color" />

                <TextView
                    android:id="@+id/work"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/text_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:maxLines="15"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@color/text_Color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/block5"
                android:layout_below="@id/block4"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá từ Người bệnh"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_Color" />
                <TextView
                    android:id="@+id/evaluate_sum"
                    android:layout_toEndOf="@id/text_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textSize="18sp"
                    android:text=""/>
                <RelativeLayout
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/rating_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="1"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_toEndOf="@id/rating_average"
                        android:background="@drawable/star" />
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/evaluateList"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/text_evaluate"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/block_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/block_enter"
            app:cardElevation="30dp"
            android:layout_width="match_parent"
            android:layout_height="77dp">
            <RelativeLayout
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/btn_enter"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_button"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_height="50dp">
                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/camera"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/camera2"/>
                        <TextView
                            android:id="@+id/choose"
                            android:layout_toEndOf="@id/camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Chọn tư vấn"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>