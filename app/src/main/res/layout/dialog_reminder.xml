<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button_google"
        android:layout_width="285dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhắc hẹn"
                android:textColor="#06C60E"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"/>
        </RelativeLayout>
        <View
            android:id="@+id/line_horizontal_one"
            android:layout_below="@id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E6FA"/>

        <RelativeLayout
            android:id="@+id/body"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:layout_below="@id/line_horizontal_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhắc lịch lúc"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="15sp"/>
            <RelativeLayout
                android:id="@+id/block_time"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:layout_below="@id/text_time"
                android:background="@drawable/custom_button_detail_doctor"
                android:backgroundTint="#E6E6E6"
                android:layout_marginTop="12dp"
                android:layout_width="120dp"
                android:layout_height="36dp">
                <TextView
                    android:id="@+id/time"
                    android:layout_marginLeft="12dp"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_Color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="#555555"
                    android:background="@drawable/custom_right"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/text_date"
                android:layout_below="@id/block_time"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày nhắc hẹn"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="15sp"/>

            <RelativeLayout
                android:id="@+id/block_date"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/text_date"
                android:clickable="true"
                android:background="@drawable/custom_button_detail_doctor"
                android:backgroundTint="#E6E6E6"
                android:layout_marginTop="12dp"
                android:layout_width="120dp"
                android:layout_height="36dp">
                <TextView
                    android:id="@+id/date"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/text_Color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="#555555"
                    android:background="@drawable/custom_right"/>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/line_horizontal_two"
            android:layout_below="@id/body"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E6FA"/>
        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:layout_below="@id/line_horizontal_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/cancel"
                    android:clickable="true"
                    android:background="@drawable/edit_text_book"
                    android:backgroundTint="@color/light_gray"
                    android:layout_width="110dp"
                    android:layout_height="38dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bỏ qua"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/enter"
                    android:clickable="true"
                    android:background="@drawable/edit_text_book"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="#06C60E"
                    android:layout_width="110dp"
                    android:layout_height="38dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xác nhận"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>