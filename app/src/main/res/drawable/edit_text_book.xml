<!-- res/drawable/button_custom.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi được nhấn -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/mainColor" />
                    <size android:height="44dp" />
                    <corners android:radius="7dp" /> <!-- Bo góc -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="7dp" />
                    <size android:height="44dp" />
                    <stroke android:width="1dp" android:color="#DFE1E1" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>



